import pandas as pd

def simple_merge_csv(fileA_path, fileB_path):
    """
    简化版的CSV合并函数
    """
    dfA = pd.read_csv(fileA_path)
    dfB = pd.read_csv(fileB_path)
    
    # 使用left join确保以文件A为基准
    result = pd.merge(dfA, dfB, on=['a', 'b', 'c'], how='left')
    
    return result

# 使用示例
# result = simple_merge_csv('A.csv', 'B.csv')
# print(result)
